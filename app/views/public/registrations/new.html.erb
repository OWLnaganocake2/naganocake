<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-md-2 offset-md-1">
        名前
      </div>
      <div class="col-md-1 offset-md-1">
        (姓)
      </div>
      <div class="col-md-2">
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "長野" %>
      </div>
      <div class="col-md-1 offset-md-1">
        (名)
      </div>
      <div class="col-md-2">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "恵子" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 offset-md-1">
        フリガナ
      </div>
      <div class="col-md-1 offset-md-1">
        (セイ)
      </div>
      <div class="col-md-2">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ナガノ" %>
      </div>
      <div class="col-md-1 offset-md-1">
        (メイ)
      </div>
      <div class="col-md-2">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ケイコ" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-1">
        メールアドレス
      </div>
      <div class="col-md-3 offset-md-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-1">
        郵便番号(ハイフンなし)
      </div>
      <div class="col-md-3 offset-md-1">
        <%= f.email_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "3808570" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-1">
        住所
      </div>
      <div class="col-md-6 offset-md-1">
        <%= f.email_field :address, autofocus: true, autocomplete: "address", placeholder: "長野市大字南長野字幅下692-2", class: "w-75 mx-auto" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-1">
        電話番号
      </div>
      <div class="col-md-6 offset-md-1">
        <%= f.email_field :tell_number, autofocus: true, autocomplete: "tell_number", placeholder: "09012345678" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-1">
        パスワード
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
        <% end %>
      </div>
      <div class="col-md-6 offset-md-1">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-1">
        パスワード(確認用)
      </div>
      <div class="col-md-6 offset-md-1">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12 text-center">
      <h5>既に登録済の方<h5>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <%= render "public/shared/links" %>からログインを行ってください。
    </div>
  </div>
</div>