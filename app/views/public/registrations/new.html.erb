<div class="form-group row" style="padding:20px;">
  <div class="col-6 offset-3" style="border-radius: 30px; background-color: lightblue; padding-top:5px;">
    <h2 class="text-center text-white">新規会員登録</h2>
  </div>
</div

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row border-bottom">
    <div class="col-4">
      名前
    </div>
    <div class="col-1">
      (姓)
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "長野", class: "w-100" %>
    </div>
    <div class="col-1">
      (名)
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "恵子", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row border-bottom">
    <div class="col-4">
      フリガナ
    </div>
    <div class="col-1">
      (セイ)
    </div>
   <div class="col-3" style="margin-bottom: 15px;">
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "ナガノ", class: "w-100" %>
    </div>
    <div class="col-1">
      (メイ)
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ケイコ", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row border-bottom">
    <div class="col-5">
      メールアドレス
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row border-bottom">
    <div class="col-5">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "3808570", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row border-bottom">
    <div class="col-5">
      住所
    </div>
    <div class="col-7" style="margin-bottom: 15px;">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "長野市大字南長野字幅下692-2", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row border-bottom">
    <div class="col-5">
      電話番号
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.text_field :tell_number, autofocus: true, autocomplete: "tell_number", placeholder: "09012345678", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row border-bottom">
    <div class="col-5">
      パスワード
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %>文字以上)
      <% end %>
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-5">
      パスワード(確認用)
    </div>
    <div class="col-3" style="margin-bottom: 15px;">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
    </div>
  </div>

  <div class="row" style="padding-bottom:20px;">
    <div class="col-12 text-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>

<% end %>

<div class="row" style="padding:20px;">
  <div class="col-4 offset-4" style="border-radius: 30px; background-color: lightblue; padding-top:5px;">
    <h5 class="text-center text-white">既に登録済の方<h5>
  </div>
</div>
<div class="row">
  <div class="col-12 text-center">
    <%= render "public/shared/links" %>からログインを行ってください。
  </div>
</div>
