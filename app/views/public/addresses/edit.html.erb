<div class='container my-5'>
  
  <h4 class='row mb-5'>
    <div>　　　　　</div><span class='heading-title'>配送先編集</span>
  </h4>
  
  <%= render 'layouts/errors', obj: @address %>
  
      <%= form_with(model: @address, url:address_path, local: true , method: :patch) do |f| %>
        <div class='row form-group'>
          <label class='col-3 ml-3'><%= f.label :"郵便番号(ハイフンなし)",style: 'min-width: 185px;' %></label>
          <%= f.text_field :post_code, class: 'form-control col-2' %>
        </div>

          <div class='row form-group'>
            <label class='col-3 ml-3'><%= f.label :"住所" %></label>
            <%= f.text_field :address, class: 'form-control col-5',style: 'min-width: 500px;' %>
          </div>

          <div class='row form-group'>
            <label class='col-3 ml-3'><%= f.label :"宛名" %></label>
            <%= f.text_field :name, class: 'form-control col-2' %>
            <div class="col-3"></div>
            <%= f.submit '変更内容を保存' ,class: "btn btn-success ml-1 col-2" ,style: 'min-width: 185px;'%>
          </div>
      
  <% end %>
  
</div>