<%= render 'layouts/errors', obj: @address %>
<%= flash[:notice] %>

<!-- 配送先登録フォーム -->
<div class="row">
  <div class="col-xs-12">
    <h3><strong>配送先登録/一覧</strong></h3>
      <%= form_with model: @address, local: true do |f| %> 
      <!--(model:@address :url => {:controller => "customers/addresses"})-->
        <div class="addres">
          <div class="form-group col-xs-12">
              <%= f.label :"郵便番号(ハイフンなし)" %>
              <%= f.text_field :post_code %>
          </div>

          <div class="form-group col-xs-12">
              <%= f.label :"住所" %>
              <%= f.text_field :address %>
          </div>

          <div class="form-group col-xs-12">
              <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
              <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
          </div>
          <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
        </div>
      <% end %>
  </div>
</div>

<!-- 配送先一覧　-->
<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover table-bordered">
      <thead>
        <tr class="address-info">
          <th class="col-xs-2">郵便番号</th>
          <th class="col-xs-6">住所</th>
          <th class="col-xs-2">宛名</th>
          <th class="col-xs-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td class="col-xs-2"><%= address.post_code %></td>
            <td class="col-xs-6"><%= address.address %></td>
            <td class="col-xs-2"><%= address.name %></td>
            <td class="col-xs-2">
              <%= link_to "編集する", edit_address_path(address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
              <%= link_to "削除する", address_path(address), method: :DELETE, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-trash btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>