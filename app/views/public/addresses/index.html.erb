<!-- 配送先登録フォーム -->
<div class='container my-5'>

  <h4 class='row mb-5'>
    <div>　　　　　</div><span class='heading-title'>配送先登録 / 一覧</span>
  </h4>

  <%= render 'layouts/errors', obj: @address %>

    <%= form_with model: @address, url: addresses_path do |f| %>
      <div class="form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-3" %>
          <%= f.text_field :post_code, placeholder: '0000000', class: "col-2 form-control",style: 'min-width: 185px;' %>
      </div>

      <div class="form-group row">
          <%= f.label :"住所", class: "col-3"%>
          <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class: 'form-control col-5',style: 'min-width: 500px;' %>
      </div>

      <div class="form-group row">
          <%= f.label :"宛名" ,class: "col-3 control-label" %>
          <%= f.text_field :name, placeholder: '令和道子',class: "col-2 form-control",style: 'min-width: 185px;' %>
          <div class='col-3'></div>
          <%= f.submit '新規登録' ,class: "col-2 pull-right btn btn-success " %>
      </div>
    <% end %>

<!-- 配送先一覧　-->
  <div class="row">
    <table class='table table-bordered mt-5 col-9'>
      <thead>
        <tr class='table-secondary'>
          <th class="col-2">郵便番号</th>
          <th class="col-4">住所</th>
          <th class="col-2">宛名</th>
          <th class="col-4"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td class='align-middle'><%= address.post_code %></td>
            <td class='align-middle'><%= address.address %></td>
            <td class='align-middle'><%= address.name %></td>
            <td class='d-flex justify-content-center align-middle'>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), method: :DELETE, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger ml-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>