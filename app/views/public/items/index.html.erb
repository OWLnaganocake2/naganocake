<h2>商品一覧(全<%= @items_all.count %>件)</h2>
<%= @items.each do |item| %>
  <%= link_to item_path(item) do %>
    <%= attachment_image_tag item, :image, width: "80%", format: "jpg", fallback: "no_image.jpg" %>
  <% end %>
  <p>商品名 <%= item.name %></p>
  <% if item.is_sold_out == true %>
    <p>¥<%= item.price %></p>
  <% else %>
    <p>販売停止中</p>
  <% end %>
<% end %>

<%= paginate @items, class: "text-center" %>
