<div class="container">
	<div class="row">
    <div class="col">
      <%= image_tag @item.get_item_image(300,300)|| "no_image.jpg", width: "60%" %>
    </div>
    <div class="col">
      <h2><strong><%= @item.name%></strong></h2>
      <h4><%= @item.item_details %></h4>
    </div>
      <% if @item.is_active == true %>
        <h3>¥ <%= @item.add_tax_sales_price.to_s(:dalimited) %> (税込)</td></h3>
       
        <%= form_with model: @cart_item, local:true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
      <% else %>
        <h3>この商品は販売停止中です。</h3>
      <% end %>
    </div>
  </div>
</div>
