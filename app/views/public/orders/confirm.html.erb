<div class="row">
  <h3><strong>注文情報詳細</strong></h3>
  <div class="col-xs-9">
    <table class="table">
      <thead>
        <tr class="info">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_item_image(60,50)|| "no_image.jpg" %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.add_tax_sales_price.to_s(:dalimited, delimiter: ',') %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= (cart_item.item.add_tax_sales_price * cart_item.amount).to_s(:dalimited, delimiter: ',') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= form_with(model: @order, url: orders_path, local: true) do |f| %>
    <div class="col-xs-3 billing">
      <table class="table">
        <tr>
          <th class='info'>配送料</th>
          <td><%= params[:order][:shipping_fee].to_s %></td> 
        </tr>
        <tr>
          <th class="info">商品合計</th>
          <td><%= @total_price.to_s(:delimited, delimiter: ',') %></td>
        </tr>
        <tr>
          <th class="info">請求金額</th>
          <td><%=(@total_price + @shipping_fee).to_s(:delimited, delimiter: ',') %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table">
        <tr>
          <th class="info">支払方法</th>
          <td><%= @payment_method %></td>
        </tr>
        <tr>
          <th class="info">お届け先</th>
          <td>
            <%= @post_code %><%= @address %><br>
            <%= @name  %>
          </td>
        </tr>
      </table>
    <%= f.hidden_field :customer_id, value: current_customer %> 
    <%= f.hidden_field :status, value: 0 %>
   </div>
  <%= f.submit "購入を確定する", class: 'btn btn-primary' %>
  <% end %>
</div>
 
   
   