<div class="row">
  <div class="col-xs-12">
		<h3><strong>注文情報入力</strong></h3>
		  <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
		    <h4>支払方法</h4>
		    <span>　　　</span><%= f.radio_button :payment_method, 0, checked: "checked" %>
		    <%= f.label :payment_method, "クレジットカード" %><br>
		    <span>　　　</span><%= f.radio_button :payment_method, 1 %>
		    <%= f.label :payment_method, "銀行振込" %>

		    <h4>お届け先</h4>
            <span>　　　</span><%= f.radio_button :a_method, 0, checked: "checked" %>
            <%= f.label :ご自身の住所 %><br>
            <span>　　　</span>〒<%= @customer.post_code %> <%= @customer.address %><br>
            <span>　　　</span><%= @customer.family_name %><%= @customer.first_name %><br>


            <span>　　　</span><%= f.radio_button :a_method, 1 %>
			<%= f.label :登録済住所から選択 %><br>
			<span>　　　</span><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>


			<span>　　　</span><%= f.radio_button :a_method, 2 %>
			<%= f.label :新しいお届け先 %><br>
			<div class="form-group row">
			  <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-6 col-form-label" %>
			  <div class="col-md-6">
			    <%= f.text_field :post_code, class: "form-control" %>
			  </div>
			</div>
			<div class="form-group row">
			  <%= f.label :"住所", class: "col-md-6 col-form-label" %>
			  <div class="col-md-6">
			    <%= f.text_field :address, class: "form-control" %>
			  </div>
			</div>
			<div class="form-group row">
			  <%= f.label :"宛名", class: "col-md-6 col-form-label" %>
			  <div class="col-md-6">
			    <%= f.text_field :name, class: "form-control" %>
			  </div>
			</div>

	   		<%= f.submit "確認画面へ進む", class: 'btn btn-success' %>

		  <% end %>

  </div>
</div>