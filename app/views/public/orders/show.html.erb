<div class="container my-5">
  <h4 class="row mb-5">
    <div>　　　　　</div><span class="heading-title">注文履歴詳細</span>
  </h4>

  <div class="row d-flex mb-3">
    <div class="col-6 mb-5 mr-3">
      <div class='row'>
        <strong><label>注文情報</label></strong></br>
        <table class="table table-bordered">
            <tr>
              <th class='col-2 table-secondary'>注文日</th>
              <td class="col-6">
                <%= @order.created_at.strftime('%Y/%m/%d') %>
              </td>
            </tr>
            <tr>
              <th class="table-secondary">配送先</th>
              <td>
                〒<%= @order.post_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th class="table-secondary">支払方法</th>
              <td>
                <%= @order.payment_method_i18n %>
              </td>
            </tr>
            <tr>
              <th class="table-secondary">ステータス</th>
              <td>
                <%= @order.status_i18n %>
              </td>
            </tr>
        </table>
      </div>
    </div>
  
    <div class="col-5">
      <div class="row">
        <strong><label>請求情報</label></strong><br>
        <table class="table table-bordered">
          <tr>
            <th class="col-4 table-secondary">商品合計</th>
            <td class="col-4">
              <%= (@order.total_price - @order.shipping_fee).to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">配送料</th>
            <td>
              <%= @order.shipping_fee.to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">ご請求額</th>
            <td>
              <%= @order.total_price.to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
    <strong><lable>注文内容</lable></strong><br>
      <table class="table table-bordered">
        <thead>
          <tr class="table table-secondary">
            <th class="col-3">商品</th>
            <th class="col-1">単価(税込)</th>
            <th class="col-1">個数</th>
            <th class="col-1">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.add_tax_sales_price.to_s(:delimited, delimiter: ',') %></td>
            <td><%= order_detail.amount %></td>
            <td><%= ((order_detail.add_tax_sales_price) * (order_detail.amount)).to_s(:delimited, delimiter: ',') %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>