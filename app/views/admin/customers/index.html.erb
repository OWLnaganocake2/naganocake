<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>商品一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.family_name + customer.first_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
              </td>
            </tr>S
            <% end %>
            <%= paginate @customers,class: "text-center" %>
        </tbody>
      </table>
    </div>
 