<div class="row" style="display: flex; align-items: center; justify-content: space-between;">
  <h2 style="margin-left: 10px;">会員一覧</h2>
  </div>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.family_name + customer.first_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_deleted == false %>
              有効
              <% else %>
              退会
              <% end %>
              </td>
            </tr>
            <% end %>
            <%= paginate @customers,class: "text-center" %>
        </tbody>
      </table>
    </div>
  </div>
 