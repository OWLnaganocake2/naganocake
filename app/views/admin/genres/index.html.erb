  <div class="row">
     <h2>ジャンル一覧・追加画面</h2>
     
         <div class="form-group col-md-10">
            <%= form_with(model: @genre, url: admin_genres_path) do |f| %>
              <%= f.label :ジャンル名 %>
              <%= f.text_field :name, class: "col-md-4" %>
          
             <%= f.submit "新規登録" ,class: "btn btn-primary" %>
             <% end %>  
     <table class="table">
       <thead>
         <tr>
           <th>ジャンル</th>
         </tr>
       </thead>
       <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <td><%= genre.name %></td>
           <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
         </tr>
         <% end %>>
       </thead>
     </table>