<div class="container-fluid">
  <div class="form-group row" style="padding:20px;">
    <div class="col-6 offset-3" style="border-radius: 30px; background-color: lightblue; padding-top:5px;">
      <h2 class="text-center text-white">管理者ログイン</h2>
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group row">
      <div class="col-2 offset-2">
        メールアドレス
      </div>
      <div class="col-6" style="margin-bottom: 15px;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "admin@example.jp", class: "w-100" %>
      </div>
    </div>

  <div class="form-group row">
      <div class="col-2 offset-2">
        パスワード
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "123456", class: "w-100" %>
      </div>
    </div>

    <div class="row" style="margin-bottom:50px;">
      <div class="col-md-12 text-center">
    <%= f.submit "ログイン",class: "btn btn-primary" %>
  </div>
</div>
<% end %>
</div>