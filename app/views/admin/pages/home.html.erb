<div class='container my-5'>
  <div class="row" style="display: flex; align-items: center; justify-content: space-between;">
    <h2 style="margin-left: 10px;">注文一覧</h2>
  </div>

      <table class="table table-lg">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= order.customer.family_name + order.customer.first_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
            <% end %>
            <%= paginate @order_pagenation %>
        </tbody>
      </table>
    </div>


