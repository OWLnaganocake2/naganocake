<div class='container my-5'>
  <div class="row" style="display: flex; align-items: center; justify-content: space-between;">
    <h2 style="margin-left: 10px;">注文明細</h2>
  </div>

  <div class="col-xs-7">
    <table class="table">
      <tbody>
      <tr>
        <th>購入者</th>
        <td><%= link_to admin_customer_path(@order.customer) do %>
        <%= @order.customer.family_name %><%= @order.customer.first_name %>
        <% end %>
        </td>
      </tr>

      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>

      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>

      <tr>
        <th>注文ステータス</th>
        <td>
        <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
        <%= f.select :status,Order.statuses_i18n.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
        <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
        </td>
      </tr>

    </tbody>
  </table>

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>


        <tbody>
      <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.price).floor.to_s(:delimited, delimiter: ',') %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price * order_detail.amount).floor.to_s(:delimited, delimiter: ',') %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), local: true do |f| %>    
              <%= f.select :making_status, OrderDetail.making_statuses_i18n.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
              <%= f.submit '更新',class:"btn btn-success" %>
              <% end %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>
    </div>

    <br><br><br><br><br><br><br><br><br><br>
    <div class="col-xs-4">
      <table class="table">
        <tbody>

          <tr>
            <td>商品合計</td>
            <td><%= @order.total_price.to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr>
            <td>送料</td>
            <td><%= @order.shipping_fee.to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr>
            <td>請求合計金額</td>
            <td><%= (@order.total_price + @order.shipping_fee).to_s(:delimited, delimiter: ',') %></td>
          </tr>
        </tbody>
      </table>
     </div>
    </div>
  </div>
