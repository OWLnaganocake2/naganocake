<div class="row">
  <div class="col-lg-5">
  <h2>商品詳細</h2>
   <%= image_tag @item.get_item_image(300,300) %>
   </div>
   
   <div class="col-lg-7">
     <table class="table">
       <tbody>
         <tr>
           <td>商品名</td><td><%= @item.name %></td>
         </tr>
         <tr>
           <td>商品説明</td><td><%= @item.item_details %></td>
         </tr>
         <tr>
           <td>ジャンル</td><td><%= @item.genre.name %></td>
         </tr>
         <tr>
           <td>税込価格<br/>(税抜価格)</td><td><%= @item.add_tax_sales_price.to_s(:dalimited) %>(<%= @item.price.to_s(:dalimited) %>)円</td>
         </tr>
         <tr>
           <td>販売ステータス</td>
           <td>
             <%if @item.is_active == false %>
               販売中
             <% else %>
               販売停止中
             <% end %>
           </td>
         </tr>
       </tbody>
     </table>
   </div>
   
   <div class="form-group row justify-content-center">
     <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
   </div>
   
</div>
