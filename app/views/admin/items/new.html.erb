 <div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="row">
    <%= form_for(@items, url: admin_items_path) do |f| %>
    <div class="col-lg-offset-2">
     <h2>商品新規登録</h2>
    <br>
      <div class="">
        <table class="">
          <tbody>
            <tr>
            <th>商品画像</th>
            <td><div class="ml-3">
              <%= f.file_field :item_image, placeholder: "ファイルを選択", accept: "image/*" %>
              </div></td>
            </tr>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control mt-3 ml-3" %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :item_details, class: "form-control mt-3 mb-3 ml-3" %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td>
                <div class="ml-3">
                  <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--", class: "ms-3" %>
                </div>  
              </td>
            </tr>
            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price, class: "form-control mt-3 mb-3 ml3 ml-3" %></td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><div class="ml-3">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中"  %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中" %>
              </div></td>
            </tr>
          </tbody>
        </table>
        <div class="d-flex justify-content-center">
        <%= f.submit "新規登録" ,class: "btn btn-success " %>
        </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
