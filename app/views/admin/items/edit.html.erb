<div class="row">
  <div id="error">
      <%= render "layouts/errors" , obj: @item %>
      <%= @flash %>
    </div>
<div class="col-xs-10 col-xs-offset-1">
   <div class="row">
  <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="row">
       <h2>商品編集</h2>
      </div>
      <div class="col-xs-5 col-xs-offset-2">
        <table class="table"> 
          <tbody>
            <tr>
            <tr>
              <td>商品画像</td><td><%= f.file_field :item_image, placeholder: "ファイルを選択", accept: "image/*" %></td>
            </tr>
            <tr>
              <td>商品名</td><td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>商品説明</td><td><%= f.text_area :item_details, class: "form-control" %></td>
            </tr>
            <tr>
            <td>ジャンル</td><td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>
            <tr>
              <td>税抜価格</td><td><%= f.text_field :price, class: "form-control" %></td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中"  %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中" %>
              </td>
            </tr>
          </tbody>
        </table>  
      </div>
  <div class="row justify-content-center">
    <%= f.submit "変更を保存" ,class: "btn btn-success" %>
  </div>
  <% end %>
</div>