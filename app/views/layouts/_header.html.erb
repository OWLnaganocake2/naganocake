        <%= link_to "ログアウト", admin_sign_out %>
      </li>
      
    <% else %>

      <!-- ログインしていない時 -->
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path %>　
      </li>
      <li>
        <%= link_to "新規登録", "#" %> <!--会員新規登録画面用パス入力-->
      </li>
      <li>
        <%= link_to "ログイン", "#" %>　<!--会員ログイン画面用パス入力-->
      </li>
    <% end %>
  </ul>
</header>