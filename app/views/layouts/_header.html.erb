<header>
  <h1><%= link_to "LOGO", "/" %></h1>
  <ul>
    <% if customer_signed_in? %>

      <!--カスタマーがログインしている時 -->
      <li>
        ようこそ、<%= current_customer.family_name + current_customer.first_name %>さん！
      </li>
      <li>
        <%= link_to "マイページ", customers_my_page_path %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path %>
      </li>
      <li>
        <%= link_to "カート", cart_items_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
      </li>

    <% elsif admin_signed_in? %>

      <!-- 管理者がログインしている時 -->
      <li>
        <%= link_to "商品一覧", admin_items_path %>
      </li>
      <li>
        <%= link_to "会員一覧", admin_customers_path %>
        <!--customer一覧用パス入力-->
      </li>
      <li>
        <%= link_to "注文履歴一覧" , "#" %>
        <!--order履歴一覧用パス入力-->
      </li>
      <li>
        <%= link_to "ジャンル一覧", admin_genres_path %>
        <!--genre一覧-->
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>

    <% else %>

      <!-- ログインしていない時 -->
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "商品一覧", items_path %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %> <!--会員新規登録画面用パス入力-->
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>　<!--会員ログイン画面用パス入力-->
      </li>
    <% end %>
    <li>
      <%= render "layouts/search" %>
    </li>
  </ul>
</header>