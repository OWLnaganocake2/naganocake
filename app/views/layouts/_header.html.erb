<header>
      <h1><%= link_to "LOGO", root_path %></h2>
      <ul>
        <% if customer_signed_in? %>
      </ul>
          <!--カスタマーがログインしている時 -->
          <li>
            ようこそ、<%= current_customer.family_name + current_customer.first_name %>さん！
          </li>
          <li>
            <%= link_to "マイページ", customers_my_page_path %>
          </li>
          <li>
            <%= link_to "商品一覧", items_path %>
          </li>
          <li>
            <%= link_to "カート", cart_items_path %>
          </li>
          <li>
            <%= link_to "ログアウト", customers_sign_out_path, method: :delete %></li>
          </li>

        <% elsif admin_signed_in? %>

          <!-- 管理者がログインしている時 -->
          <li>
            <%= link_to "商品一覧", admin_items_path %>
          </li>
          <li>
            <%= link_to "会員一覧", "#" %>
          </li>
          <li>
            <%= link_to "注文履歴一覧" "#" %>
          </li>
        <% else %>

          <!-- ログインしていない時 -->
          <li><%= link_to "商品一覧", items_path, style: "font-family: HiraMinPro-W6; color: #000000;" %></li>
          <li style="font-family: Osaka; margin-top: 15px; color: #696969;">|</li>
          <li><%= link_to "新規登録", new_customer_registration_path, style: "font-family: HiraMinPro-W6; color: #000000;" %></li>
          <li style="font-family: Osaka; margin-top: 15px; color: #696969;">|</li>
          <li><%= link_to "About", about_path, style: "font-family: HiraMinPro-W6; color: #000000;" %></li>
          <li style="font-family: Osaka; margin-top: 15px; color: #696969;">|</li>
          <li><%= link_to "ログイン", new_customer_session_path, style: "font-family: HiraMinPro-W6; color: #000000;" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>